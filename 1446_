#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

int main() {
    ios::sync_with_stdio(0);
    cin.tie(0);

    int n, d;
    cin >> n >> d;

    vector<pair<int, int>> adj[10001];
    for (int i = 0; i < n; i++) {
        int u, v, w;
        cin >> u >> v >> w;
        if (v <= d) adj[u].push_back({ v, w });
    }

    vector<int> dist(d + 1);
    for (int i = 0; i <= d; i++) dist[i] = i;

    for (int i = 0; i <= d; i++) {
        if (i > 0) dist[i] = min(dist[i], dist[i - 1] + 1);

        for (auto edge : adj[i]) {
            int next = edge.first;
            int cost = edge.second;

            if (dist[i] + cost < dist[next]) {
                dist[next] = dist[i] + cost;
            }
        }
    }

    cout << dist[d] << "\n";

    return 0;
}
